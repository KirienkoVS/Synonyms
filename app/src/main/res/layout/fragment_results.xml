<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultsFragment">

    <RatingBar
        android:id="@+id/rating_bar"
        android:isIndicator="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:id="@+id/divider"
        android:layout_marginTop="12dp"
        android:layout_width="380dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintTop_toBottomOf="@id/rating_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/word1"
        tools:text="word1"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        style="@style/synonym_style"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider"/>

    <TextView
        android:id="@+id/answer1"
        tools:text="answer1"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        style="@style/synonym_style"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider" />

    <TextView
        android:id="@+id/word2"
        tools:text="word2"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        style="@style/synonym_style"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/word1"/>

    <TextView
        android:id="@+id/answer2"
        tools:text="answer2"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        style="@style/synonym_style"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/answer1" />

    <TextView
        android:id="@+id/word3"
        tools:text="word3"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        style="@style/synonym_style"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/word2"/>

    <TextView
        android:id="@+id/answer3"
        tools:text="answer3"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        style="@style/synonym_style"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/answer2" />

    <TextView
        android:id="@+id/word4"
        tools:text="word4"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        style="@style/synonym_style"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/word3"/>

    <TextView
        android:id="@+id/answer4"
        tools:text="answer4"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        style="@style/synonym_style"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/answer3" />

    <TextView
        android:id="@+id/word5"
        tools:text="word5"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        style="@style/synonym_style"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/word4"/>

    <TextView
        android:id="@+id/answer5"
        tools:text="answer5"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        style="@style/synonym_style"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/answer4" />

    <Button
        android:id="@+id/new_game"
        android:text="играть снова"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_marginTop="16dp"
        android:textSize="22sp"
        android:textColor="@color/material_on_surface_disabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/answer5"/>

</androidx.constraintlayout.widget.ConstraintLayout>